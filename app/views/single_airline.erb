<h1><%=@airline.name%> Flight</h1>
    <%@airline.tickets.each do |t| %>
        <h4>Seat <%= t.seat_number %></h4>
        <p> Departs from: <%=t.departure_city%> </p>
        <p> Arrives at: <%=t.destination_city%> </p>
    <%end%>

<form method="post" action="/single_airline/<%=@airline.id %>" >
    <input type="hidden" name="_method" value="delete">
        <input type="submit" value= "Delete Airline">
</form>